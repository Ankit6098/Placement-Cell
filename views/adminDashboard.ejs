<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="shortcut icon" href="https://cdn-icons-png.flaticon.com/512/1063/1063196.png" type="image/x-icon">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="/css/_navbar.css">
    <link rel="stylesheet" href="/css/admin.css">
</head>
<body>
    <%- include('_navbar'); %>
    
    <div class="dashboard-main-container">
        <div class="aside-navbar-links">
            <ul class="aside-navbar-links-ul" type="none">
                <li class="dashboard-li"><span class="material-symbols-outlined">
                    grid_view
                    </span>Dashboard</li>
                <li class="student-li"><span class="material-symbols-outlined">
                    person
                    </span>Students</li>
                <li class="interview-li"><span class="material-symbols-outlined">
                    description
                    </span>Interviews</li>
                <li class="companies-li"><span class="material-symbols-outlined">
                    apartment
                    </span>Companies</li>
            </ul>
            <div class="theme">
                <span class="material-symbols-outlined">light_mode</span>
                <span>Light Mode</span>
            </div>
        </div>

        <!-- dashboard -->
        <div class="dashboard-container">
            <div class="students-interviews-container">
                <div class="students-container">
                    <p>students</p>
                </div>
                <div class="interviews-container">
                    <p>intervies</p>
                </div>
            </div>
            <div class="companies-and-other-container">
                <div class="companies-container">
                    <p>companies</p>
                </div>
            </div>
        </div>

        <!-- students -->
        <div class="students-main-container">
            <!-- container header -->
            <div class="heading">
                <h2>Student</h2>
            </div>

            <!-- display more info -->
            <div class="student-more-info-container animate__animated animate__fadeIn">
                    
            </div>

            <!-- all students -->
            <% if (students.length == 0) { %>
                <div class="no-found">
                    <script src='https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js'></script><lottie-player src='https://lottie.host/f135a538-9be5-4487-b2da-7f49b93e8dbf/Y22iaG84qI.json' background='transparent' speed='1' style='width: 300px; height: 300px' loop autoplay direction='1' mode='normal'></lottie-player>
                    <p>No Student found</p>
                </div>
            <% } else { %>
                <div class="students-display-container">
                    <% let i = 1; %>
                    <% students.map((student) => { %>
                        <div class="students-details-container">
                            <%= i++ + "."; %>
                            <div class="students-inner-container" data-id="<%= student._id %>">
                                <img src="<%= student.avatar %>" alt="">
                                <div class="student-name">
                                    <p><%= student.name %> <%= student.lastname %></p>
                                </div>
                                <div class="student-email">
                                    <p><%= student.email %></p>
                                </div>
                                <div class="student-phone">
                                    <p><%= student.phone %></p>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } %>
        </div>

        <!-- interview -->
        <div class="interviews-main-container">
            <!-- container header -->
            <div class="heading">
                <h2>interview</h2>
                <button class="interview-add-button">Add</button>
            </div>

            <!-- form -->
            <div class="interview-form-container">
                <form action="/admin/assign-interview" method="post">
                    <div class="input-container">
                        <label for="job-name">Company Name : </label>
                        <select name="jobs" id="" required>
                            <option value=""></option>
                            <% jobs.map((job) => { %>
                                <option value="<%= job.title %>"><%= job.title %></option>
                            <% }) %>
                        </select>
                    </div>
                    <div class="input-container">
                        <label for="student-name">Student Name : </label>
                        <input type="text" name="student">
                    </div>
                    <div class="input-container">
                        <label for="date">Date : </label>
                        <input type="date" name="date" required>
                    </div>
                    <div class="input-container">
                        <label for="time">Time : </label>
                        <input type="time" name="time">
                    </div>
                    <div class="input-container">
                        <label for="interview-mode">Interview Mode : </label>
                        <select name="interview-mode" id="">
                            <option value="online">Online</option>
                            <option value="offline">Offline</option>
                        </select>
                    </div>
                    <div class="input-container">
                        <label for="status">Status : </label>
                        <select name="status" id="" required>
                            <option value="pending">Pending</option>
                            <option value="accepted">Accepted</option>
                            <option value="rejected">Rejected</option>
                        </select>
                    </div>
                    <button>Submit</button>
                    <i class="fa-solid fa-xmark container-close-btn" onclick="closeContainerbtn()"></i>
                </form>
            </div>

            <!-- display active interview -->
            <% if (interviews.length == 0) { %>
                <div class="no-found">
                    <script src='https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js'></script><lottie-player src='https://lottie.host/f135a538-9be5-4487-b2da-7f49b93e8dbf/Y22iaG84qI.json' background='transparent' speed='1' style='width: 300px; height: 300px' loop autoplay direction='1' mode='normal'></lottie-player>
                    <p>No Interview found</p>
                </div>
            <% } else { %>
                <div class="active-interview-container">
                    <% interviews.map((interview) => { %>
                        <div class="active-intervies" data-id= "<%= interview._id %>">
                            <img src="<%= interview.image %>" alt="">
                            <p><%= interview.company %> - <%= interview.location %></p>
                            <p><%= interview.title %></p>
                            <p><%= interview.student %></p>
                        </div>
                    <% }) %>
                </div>
            <% } %>
        </div>
        
        <!-- jobs container -->
        <div class="jobs-main-container">
            <!-- container header -->
            <div class="heading">
                <h2>companies</h2>
            </div>
            <div class="search-add-container">
                <div class="search-container">
                    <input type="text" placeholder="Search jobs, Intership">
                    <input type="text" placeholder="Lcoation">
                </div>
                <button class="company-add-btn">Add</button>
            </div>

            <!-- form -->
            <div class="company-add-form">
                <form action="admin/create-jobs" method="post">
                    <div class="company-input-container">
                        <label for="company-image">Logo</label>
                        <input type="text" name="image" class="company-input">
                    </div>
                    <div class="company-input-container">
                        <label for="company-name">Name</label>
                        <input type="text" name="company" class="company-input">
                    </div>
                    <div class="company-input-container">
                        <label for="company-job-title">Title</label>
                        <input type="text" name="title" class="company-input">
                    </div>
                    <div class="company-input-container">
                        <label for="company-job-salary">Salary</label>
                        <input type="text" name="salary" class="company-input">
                    </div>
                    <div class="company-input-container">
                        <label for="company-description">Description</label>
                        <textarea name="description" class="company-input" cols="30" rows="10"></textarea>
                    </div>
                    <div class="company-input-container">
                        <label for="company-job-skills">Skills</label>
                        <input type="text" name="company-phone" class="company-input">
                    </div>
                    <div class="company-input-container">
                        <label for="company-job-location">Location</label>
                        <input type="text" name="location" class="company-input">
                    </div>
                    <div class="company-input-container">
                        <label for="company-job-title">Email</label>
                        <input type="text" name="email" class="company-input">
                    </div>
                    <div class="company-input-container">
                        <label for="company-job-title">Website Link</label>
                        <input type="text" name="website" class="company-input">
                    </div>
                    <div class="company-submit">
                        <button type="submit">Submit</button>
                    </div>
                    <i class="fa-solid fa-xmark container-close-btn" onclick="closeContainerbtn()"></i>
                </form>
            </div>

            <!-- display more info -->
            <div class="company-more-info-container animate__animated animate__fadeIn">
                    
            </div>

            <!-- display active jobs -->
            <% if (jobs.length == 0) { %>
                <div class="no-found">
                    <script src='https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js'></script><lottie-player src='https://lottie.host/f135a538-9be5-4487-b2da-7f49b93e8dbf/Y22iaG84qI.json' background='transparent' speed='1' style='width: 300px; height: 300px' loop autoplay direction='1' mode='normal'></lottie-player>
                    <p>No Jobs found</p>
                </div>
            <% } else { %>
                <div class="active-jobs-container">
                    <% jobs.map((job) => { %>
                        <div class="active-jobs" data-id= "<%= job._id %>">
                            <img src="<%= job.image %>" alt="">
                            <div class="job-details">
                                <p><%= job.company %> - <%= job.location %></p>
                                <p><%= job.title %></p>
                                <p><%= job.salary %></p>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } %>
        </div>
                      
        <!-- right aside container -->
        <div class="right-aside-container">
            <div class="reminder-container">
                <p>remainder</p>
            </div>
            <div class="notification-container">
                <% if (interviews.length == 0) { %>
                    <div class="no-found">
                        <p>No Notification</p>
                    </div>
                <% } else { %>
                    <% for (let i = 0; i < 3; i++) { %>
                        <div class="active-applied-container" interview-id="<%=interviews[i]._id%>">
                            <div class="applied-details">
                                <div class="applied-company-img">
                                    <img src="<%= interviews[i].companyImage %>" alt="">
                                </div>
                                <div>
                                    <p><%= interviews[i].companyName %> - <%= interviews[i].companyLocation %></p>
                                    <div><%= interviews[i].jobTitle %></div>
                                </div>
                            </div>
                            <div class="applied-job-salary">
                                <p><%= interviews[i].studentName %></p>
                            </div>
                            <div class="applied-action-buttons">
                                <a href=""></a><button class="accept-btn">Accept</button>
                                <a href="admin/reject-apllied-jobs-notification/<%= interviews[i]._id %>"><button class="reject-btn">Reject</button></a>
                            </div>
                        </div>
                    <% } %>
                <% } %>
            </div>
        </div>
    </div>

    <script src="/js/adminDashboard.js"></script>
</body>
</html>